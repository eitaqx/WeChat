/* pages/addressTest/addressTest.wxss */
page{position: relative;}
map{width: auto;height: auto;position: fixed;left: 0;top: 200rpx;right: 0;bottom: 420rpx;}
.header{position: fixed;top: 0;left: 0;right: 0;height: 200rpx;overflow: hidden;}
.icon_search{margin-top: 20rpx;}
.btn{line-height: 50rpx;border-radius: 4rpx;margin-top: -5rpx;}
.footer{position: fixed;left: 0;right: 0;bottom: 0;height: 420rpx;}
.foot-border{border-bottom: 1px solid #eee;line-height: 32rpx;}
.foot-border .padding{padding: 25rpx;}
.foot-active{color: #E74246;position: relative;}
.foot-active::after{content: '';position: absolute;height: 2px;background: #E74246;border-radius: 2px;bottom: 0;width: 5em;left: 50%;transform: translateX(-50%);}
.scroll{position: absolute;left: 0;right: 0;top: 82rpx;bottom: 0;}
.scroll .padding{padding-right: 40px;}
.scroll .icon_circle{position: absolute;right: 25rpx;top: 50%;transform: translateY(-50%);}
.icon_img_tip{padding: 20rpx 0;}